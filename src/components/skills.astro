---
import SkillsData from "../data/cv.json";
---

<section>
    <h2>Habilidades</h2>
    <div class="skills-container">
        <div class="skills-frontend">
            <h3 class="skills-title">Frontend</h3>
            <div class="skills-frontend-inside">
                {Object.entries(SkillsData.skills.frontend).map(([key, value]) => {
                    return (
                        <div class="inside-skills-container">
                            <p>{key}</p>
                            <img src={value}/>
                        </div>
                    );
                })}
            </div>
        </div>
        <div class="skills-backend">
            <h3 class="skills-title">Backend</h3>
            <div class="skills-backend-inside">
                {Object.entries(SkillsData.skills.backend).map(([key, value]) => {
                    return (
                        <div class="inside-skills-container">
                            <p>{key}</p>
                            <img src={value}/>
                        </div>
                    );
                })}
            </div>
        </div>
    </div>
</section>

<style>
    section{
        margin-bottom: 10px;
    }
    .skills-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .skills-title{
        text-align: center;
    }
    .inside-skills-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 15px;
    }
    .skills-frontend-inside,
    .skills-backend-inside {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        align-items: center;
    }
</style>
